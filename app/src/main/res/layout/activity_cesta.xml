<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cesta">


    <TextView

        android:id="@+id/MontoTotal"
        android:layout_width="157dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Total: 179,97 €"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_marginStart="64dp"
        android:backgroundTint="@color/blue"
        android:onClick="realizarPago"
        android:text="Pagar"
        app:layout_constraintStart_toEndOf="@+id/MontoTotal"
        app:layout_constraintTop_toTopOf="@+id/MontoTotal" />

    <TextView
        android:id="@+id/CESTAVJenVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Cesta de la compra "
        android:textColor="#020202"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CestasTituloZelda"
        android:layout_width="222dp"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        android:text="The Legend of Zelda: Tears of the Kingdom"
        android:textColor="#120D0D"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView

        android:id="@+id/CestaTituloMariotext"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:text="Super Mario Bros. Wonder"
        android:textColor="#140B0B"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/CODtextocesta"
        android:layout_width="210dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:text="Call of Duty: Modern Warfare III"
        android:textColor="#140B0B"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/vjuego2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/vjuego3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CESTAVJenVenta"
        app:srcCompat="@drawable/vjuego1" />

    <Button
        android:id="@+id/idCestaZeldaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"
        android:text="Eliminar "
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/BotonCODcestaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"
        android:text="Eliminar"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/MarioMarioCestaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/red"
        android:text="Eliminar"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Precio 69,99 €"
        app:layout_constraintStart_toStartOf="@+id/CestasTituloZelda"
        app:layout_constraintTop_toBottomOf="@+id/CestasTituloZelda" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Precio 59,99 €"
        app:layout_constraintStart_toStartOf="@+id/CODtextocesta"
        app:layout_constraintTop_toBottomOf="@+id/CODtextocesta" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Precio 49,99 €"
        app:layout_constraintStart_toStartOf="@+id/CestaTituloMariotext"
        app:layout_constraintTop_toBottomOf="@+id/CestaTituloMariotext" />


</androidx.constraintlayout.widget.ConstraintLayout>